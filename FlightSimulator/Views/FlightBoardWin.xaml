<UserControl x:Class="FlightSimulator.Views.FlightBoardWin"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FlightSimulator.Views"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800" Background="White">
    <Grid>
        <local:FlightBoard Grid.Row="1" Grid.ColumnSpan="3" ></local:FlightBoard>
        <Button x:Name="connect" Content="Connect" Grid.Row="0" Grid.Column="0" ClickMode="Press" HorizontalAlignment="Right" FontSize="20" Width="100" Height="40" Background="White" BorderBrush="Black" FontWeight="Bold"/>
        <Button x:Name="settings" Content="Settings" Grid.Row="0" Grid.Column="2" ClickMode="Press" HorizontalAlignment="Left" FontSize="20" Width="100" Height="40" Background="White" BorderBrush="Black" FontWeight="Bold"/>
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition Height="550" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="350" />
            <ColumnDefinition Width="50" />
            <ColumnDefinition Width="400" />
        </Grid.ColumnDefinitions>
    </Grid>
</UserControl>
